.login-wrapper
  .text-center
    %h2{:style => "font-weight:bold"}
      %span.text-success Sanliam Online Portal
  .login-widget
    .panel.panel-default
      .panel-heading
        %i.fa.fa-plus-circle.fa-lg
        Sign up
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, class: "form-control input-sm"
          .form-group
            = f.label :phone_number
            %br/
            = f.text_field :phone_number, autofocus: true, class: "form-control input-sm"
          .form-group
            = f.label :full_name
            %br/
            = f.text_field :full_name, autofocus: true, class: "form-control input-sm"
          .form-group
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off", class: "form-control input-sm"
          = f.hidden_field :account_type, :value => 0
          .form-group
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-sm"
            %br/
          .form-group
            .controls.text-right
              = f.button :submit ,class: "btn btn-success btn-sm " do
                %i.fa.fa-plus-circle
                Sign up
          %hr    
          .form-group
            .controls
              Already have an account? #{link_to 'Log in', user_session_path, class: "primary-font login-link"}  
